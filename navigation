<body>

	<nav class="navMenu">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i> Home</a>
		<a id="vision" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-glasses"></i> Vision</a>
		<a id="plan" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-calendar-days"></i> Plan</a>
		<a id="productivity" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-list-check"></i> Productivity</a>
		<a id="organization" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-sitemap"></i> Organization</a>
		<a id="finance" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-coins"></i> Finance</a>
		<a id="fitness" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-dumbbell"></i> Fitness</a>
		<a id="nutrition" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-apple-whole"></i> Nutrition</a>
		<a id="welness" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-spa"></i> Welness</a>

	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://www.notion.so/isanmarri/Ultimate-Life-Planner-adaeb41f4a3342de88bef818f05d6b03?pvs=4", '_blank').focus();
			else if (id == "vision")
				window.open("https://vision.com", '_blank').focus();
			else if (id == "plan")
				window.open("https://plan.com", '_blank').focus();
			else if (id == "productivity")
				window.open("https://productivity.com", '_blank').focus();
			else if (id == "organization")
				window.open("https://organization.com", '_blank').focus();
			else if (id == "finance")
				window.open("https://finance.com", '_blank').focus();
			else if (id == "fitness")
				window.open("https://fitness.com", '_blank').focus();
			else if (id == "nutrition")
				window.open("https://nutrition.com", '_blank').focus();
			else if (id == "wellness")
				window.open("https://welness.com", '_blank').focus();

		}
	</script>


